{
  "name": "jefes-en-frente-backend",
  "version": "1.0.0",
  "description": "Sistema de reportes mineros - Jefes en Frente",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "vercel-build": "tsc",
    "seed": "tsc && node dist/scripts/seedData.js",
    "init": "tsx src/scripts/createInitialUsers.ts",
    "check": "tsc && node dist/scripts/checkData.js",
    "clean": "rmdir /s /q dist",
    "clean:force": "if exist dist rmdir /s /q dist"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.5.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.0"
  }
}
